#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/pointing.h>

#define ZMK_POINTING_DEFAULT_MOVE_VAL 10
#define ZMK_POINTING_DEFAULT_SCRL_VAL 20

#define L_HAND_KEYS   \
     0  1  2  3  4    \
    10 11 12 13 14    \
    20 21 22 23 24 25 \
    32 33 34

#define L_THUMB_KEYS \
             35 36 37

#define R_HAND_KEYS \
                            5  6  7  8  9 \
                           15 16 17 18 19 \
                        26 27 28 29 30 31

#define R_THUMB_KEYS \
                        38 39

&mt {
    flavor = "tap-preferred";
};

&lt {
    flavor = "tap-preferred";
};

/ {
    my_layout: physical_layout_3 {
        compatible = "zmk,physical-layout";
        display-name = "My Layout";
        kscan = <&kscan0>;
        transform = <&size_l_transform>;
    };
};

/ {
    chosen {
        zmk,physical-layout = &my_layout;
        // zmk,matrix_transform = &size_l_transform;
        // zmk,kscan = &kscan0;
        zmk,battery = &non_lipo_battery;
    };
};

/ {
    behaviors {
        hml: home_row_mod_left {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            require-prior-idle-ms = <150>;
            tapping-term-ms = <200>;
            quick-tap-ms = <130>;
            bindings = <&kp>, <&kp>;
            hold-trigger-key-positions = <R_HAND_KEYS>;
            hold-trigger-on-release;
        };

        hmr: home_row_mod_right {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            require-prior-idle-ms = <150>;
            tapping-term-ms = <200>;
            quick-tap-ms = <130>;
            bindings = <&kp>, <&kp>;
            hold-trigger-key-positions = <L_HAND_KEYS>;
            hold-trigger-on-release;
        };

        pht: positional_hold_tap {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "hold-preferred";
            tapping-term-ms = <1000>;
            quick-tap-ms = <200>;
            bindings = <&kp>, <&kp>;
            hold-trigger-key-positions = <L_HAND_KEYS>;
        };
    };

    combos {
        compatible = "zmk,combos";

        bt_clear {
            bindings = <&bt BT_CLR>;
            key-positions = <28 29>;
            layers = <2>;
        };

        combo_esc {
            timeout-ms = <30>;
            bindings = <&kp ESC>;
            key-positions = <11 12>;
            layers = <0>;
        };

        combo_lang {
            timeout-ms = <30>;
            bindings = <&kp LC(SPACE)>;
            key-positions = <17 18>;
            layers = <0>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        layer_0 {
            bindings = <
&kp Q       &kp W       &kp E        &kp R       &kp T                                &kp Y       &kp U       &kp I       &kp O       &kp SQT
&hml LCTRL A &hml LALT S  &hml LSHFT D &hml LGUI F  &kp G        &none        &none      &kp H       &hmr RGUI J  &hmr RSHFT K &hmr RALT L  &hmr RCTRL SEMI
&kp LSHFT   &kp Z       &kp X        &kp C       &kp V        &kp SPACE    &kp RET    &kp B       &kp N       &kp M       &kp P       &kp RSHFT
&none       &none       &none        &kp LGUI    &lt 2 SPACE  &lt 3 TAB    &kp ENTER  &lt 1 BSPC  &kp DELETE  &trans      &kp COMMA   &kp DOT
            >;
        };

        layer_1 {
            bindings = <
&none  &kp N7  &kp N8  &kp N9  &kp EQUAL                    &none  &none     &none      &none     &none
&none  &kp N4  &kp N5  &kp N6  &kp MINUS  &none      &none  &none  &kp RGUI  &kp RSHFT  &kp RALT  &kp RCTRL
&none  &kp N1  &kp N2  &kp N3  &kp GRAVE  &none      &none  &none  &none     &none      &none     &kp RSHFT
&none  &none   &none   &kp DOT &kp N0     &kp TAB    &none  &none  &trans    &none      &none     &none
            >;
            // TODO: set DOT/COMMA instead of DOT/GT with shift mod
        };

        layer_2 {
            bindings = <
&none      &none     &none      &none     &none                           &kp SQT   &kp DQT    &kp LBKT   &kp RBKT   &none
&kp LCTRL  &kp LALT  &kp LSHFT  &kp LGUI  &none   &none        &none      &kp LEFT  &kp DOWN   &kp UP     &kp RIGHT  &kp SQT
&kp LSHFT  &none     &none      &none     &none   &kp PG_DN    &kp PG_UP  &kp LBKT  &kp RBKT   &kp COMMA  &kp DOT    &kp FSLH
&none      &none     &none      &none     &trans  &none        &kp PIPE   &kp BSLH  &none      &none      &kp COMMA  &kp DOT
            >;
        };

        layer_3 {
            bindings = <
&none      &none     &none      &none     &none                     &none     &none      &none      &none      &none
&kp LCTRL  &kp LALT  &kp LSHFT  &kp LGUI  &none   &none     &none   &none     &mkp LCLK  &mkp RCLK  &none      &msc SCRL_DOWN
&kp LSHFT  &none     &none      &none     &none   &none     &none   &none     &mkp LCLK  &mkp RCLK  &none      &msc SCRL_UP
&none      &none     &none      &none     &none   &trans    &none   &none     &none      &none      &none      &msc SCRL_DOWN
            >;
        };
    };
};
